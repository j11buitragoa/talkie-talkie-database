<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/escucha_bkg"
    tools:context=".Escucha_Frecuencia">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="20dp"
        app:cardElevation="30dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntos "
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/custom_edittext"
        android:visibility="visible"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/high_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:backgroundTint="@color/orange"
                android:text="Higher"
                android:textColor="@color/dark_grey"
                android:textSize="35sp"
                android:visibility="gone"
                app:cornerRadius="25dp" />

            <Button
                android:id="@+id/same_button"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:backgroundTint="@color/green"
                android:text="Iguales"
                android:textColor="@color/dark_grey"
                android:textSize="35sp"
                app:cornerRadius="25dp" />

            <Button
                android:id="@+id/low_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:backgroundTint="@color/yellow"
                android:text="Lower"
                android:textColor="@color/dark_grey"
                android:textSize="35sp"
                android:visibility="gone"
                app:cornerRadius="25dp" />

            <Button
                android:id="@+id/diff_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:backgroundTint="@color/red"
                android:text="Diferentes"
                android:textColor="@color/dark_grey"
                android:textSize="35sp"
                android:visibility="visible"
                app:cornerRadius="25dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/dark_grey"
        android:gravity="center_horizontal"
        android:text="Volver"
        android:textSize="25sp"
        android:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/instructionsCardView"
        android:layout_width="390dp"
        android:layout_height="692dp"
        android:layout_centerInParent="true"
        android:layout_margin="-100dp"
        android:background="@drawable/custom_edittext"
        android:gravity="center"
        android:translationY="-790dp"
        android:visibility="gone"
        app:cardElevation="50dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="710dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="208dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="231dp"
                android:layout_height="38dp"
                android:layout_marginTop="-1dp"
                android:layout_marginBottom="-10dp"
                android:text=" Vas a sentir vibraciones "
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="90dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text=" En "
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="90dp" />


            <LinearLayout
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="35dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="-150dp"
                    android:layout_marginEnd="170dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text=" Derecha          e"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="-580dp"
                    android:layout_marginEnd="-170dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text=" Izquierda"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="35dp">


                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="181dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="150dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    app:srcCompat="@drawable/img_3" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="-150dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    app:srcCompat="@drawable/img_3" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Indica en la pantalla si las vibraciones de la derecha fueron iguales o diferentes a las de la izquierda"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView88"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Si las vibraciones fueron diferentes indica si la ultima vibracion fue "
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="35dp">

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="-150dp"
                    android:layout_marginEnd="170dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:text="Aguda         o"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="-580dp"
                    android:layout_marginEnd="-170dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:text="Grave"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="35dp">

                <ImageView
                    android:id="@+id/imageView77"
                    android:layout_width="181dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="150dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    app:srcCompat="@drawable/img_8" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="179dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="-150dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    app:srcCompat="@drawable/img_7" />
            </LinearLayout>

            <Button
                android:id="@+id/okf2"
                android:layout_width="321dp"
                android:layout_height="68dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/blue"
                android:text="OK"
                android:textAlignment="center"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                tools:layout_editor_absoluteX="67dp"
                tools:layout_editor_absoluteY="1dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>