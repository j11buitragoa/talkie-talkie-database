<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/escucha_bkg"
    tools:context=".grabaciones">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_marginTop="20dp"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.081">

                <Button
                    android:id="@+id/grabA"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="@dimen/marginExt"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:backgroundTint="@color/green2"
                    android:text="La"
                    android:textSize="@dimen/sizeTextEscucha"
                    tools:layout_editor_absoluteX="34dp"
                    tools:layout_editor_absoluteY="109dp" />

                <Button
                    android:id="@+id/grabE"
                    android:layout_width="166dp"
                    android:layout_height="59dp"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:backgroundTint="@color/green2"
                    android:text="Me"
                    android:textSize="@dimen/sizeTextEscucha"
                    tools:layout_editor_absoluteX="34dp"
                    tools:layout_editor_absoluteY="240dp" />

                <Button
                    android:id="@+id/grabI"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:backgroundTint="@color/green2"
                    android:text="Mi"
                    android:textSize="@dimen/sizeTextEscucha"
                    tools:layout_editor_absoluteX="227dp"
                    tools:layout_editor_absoluteY="109dp" />

                <Button
                    android:id="@+id/grabO"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:backgroundTint="@color/green2"
                    android:text="No"
                    android:textSize="@dimen/sizeTextEscucha"
                    tools:layout_editor_absoluteX="234dp"
                    tools:layout_editor_absoluteY="240dp" />

                <Button
                    android:id="@+id/grabU"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:backgroundTint="@color/green2"
                    android:text="Su"
                    android:textSize="@dimen/sizeTextEscucha"
                    tools:layout_editor_absoluteX="31dp"
                    tools:layout_editor_absoluteY="370dp" />

                <Button
                    android:id="@+id/nuevo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="@dimen/marginExt"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:backgroundTint="@color/blue2"
                    android:text="Grabar audio nuevo"
                    android:textSize="@dimen/sizeTextEscucha" />

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="@dimen/marginExt"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:backgroundTint="@color/blue"
                    android:text="Volver"
                    android:textSize="@dimen/sizeTextEscucha"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="373dp" />


            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="40dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="20dp"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.292">

                <Button
                    android:id="@+id/grabar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:backgroundTint="@color/pink"
                    android:text="grabar"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="60dp"
                    tools:layout_editor_absoluteY="524dp" />

                <Button
                    android:id="@+id/guardar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:backgroundTint="@color/purple"
                    android:text="Guardar"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="227dp"
                    tools:layout_editor_absoluteY="524dp" />

                <Button
                    android:id="@+id/eliminar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:backgroundTint="@color/red"
                    android:text="Eliminar"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="155dp"
                    tools:layout_editor_absoluteY="623dp" />

                <Button
                    android:id="@+id/repro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/yellow"
                    android:text="Reproducir"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/listo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/marginExt"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/marginExt"
                    android:layout_marginBottom="@dimen/marginInt"
                    android:backgroundTint="@color/blue"
                    android:text="Listo"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>