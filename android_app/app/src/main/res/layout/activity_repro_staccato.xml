<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/escucha_bkg"
    tools:context=".repro_staccato">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="40dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"
        android:padding="0dp"
        android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/comenzar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginExt"
            android:layout_marginTop="@dimen/marginExt"
            android:layout_marginEnd="@dimen/marginExt"
            android:layout_marginBottom="@dimen/marginInt"
            android:textSize="@dimen/sizeTextEscucha"
            android:backgroundTint="@color/blue"
            android:text="Comenzar" />

        <Button
            android:id="@+id/reproa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginExt"
            android:layout_marginTop="@dimen/marginExt"
            android:layout_marginEnd="@dimen/marginExt"
            android:layout_marginBottom="@dimen/marginInt"
            android:textSize="@dimen/sizeTextEscucha"
            android:backgroundTint="@color/blue2"
            android:text="Reproducir audio" />

        <TextView
            android:id="@+id/fonema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginExt"
            android:layout_marginTop="@dimen/marginExt"
            android:layout_marginEnd="@dimen/marginExt"
            android:layout_marginBottom="@dimen/marginInt"
            android:textSize="@dimen/sizeTextEscucha"
            android:text="Tienes que pronunciar : " />

        <TextView
            android:id="@+id/silencio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginExt"
            android:layout_marginTop="@dimen/marginExt"
            android:layout_marginEnd="@dimen/marginExt"
            android:layout_marginBottom="@dimen/marginInt"
            android:textSize="@dimen/sizeTextEscucha"
            android:text="Tiempo que debes permanecer en silencio: " />

        <Button
            android:id="@+id/intentalo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginExt"
            android:layout_marginTop="@dimen/marginExt"
            android:layout_marginEnd="@dimen/marginExt"
            android:layout_marginBottom="@dimen/marginInt"
            android:textSize="@dimen/sizeTextEscucha"
            android:backgroundTint="@color/purple"
            android:text="Intentalo " />
        <TextView
            android:id="@+id/coincide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginExt"
            android:layout_marginTop="@dimen/marginExt"
            android:layout_marginEnd="@dimen/marginExt"
            android:layout_marginBottom="@dimen/marginInt"
            android:textSize="@dimen/sizeTextEscucha"
            android:text="" />

        <Button
            android:id="@+id/admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginExt"
            android:layout_marginTop="@dimen/marginExt"
            android:layout_marginEnd="@dimen/marginExt"
            android:layout_marginBottom="@dimen/marginInt"
            android:textSize="@dimen/sizeTextEscucha"
            android:backgroundTint="@color/green"
            android:text="Admin" />

        <Button
            android:id="@+id/volver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginExt"
            android:layout_marginTop="@dimen/marginExt"
            android:layout_marginEnd="@dimen/marginExt"
            android:layout_marginBottom="@dimen/marginInt"
            android:textSize="@dimen/sizeTextEscucha"
            android:backgroundTint="@color/blue"
            android:text="Volver" />
    </LinearLayout>
    </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>